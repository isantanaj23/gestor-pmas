// server/models/Message.js - VERIFICAR que tenga el campo readBy

const mongoose = require('mongoose');

const messageSchema = new mongoose.Schema({
  content: {
    type: String,
    required: true,
    trim: true
  },
  sender: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'User',
    required: true
  },
  channel: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'Channel',
    required: true
  },
  type: {
    type: String,
    default: 'text'
  },
  
  // ðŸ†• IMPORTANTE: Campo para tracking de lectura
  readBy: [{
    user: {
      type: mongoose.Schema.Types.ObjectId,
      ref: 'User'
    },
    readAt: {
      type: Date,
      default: Date.now
    }
  }]
  
}, {
  timestamps: true
});

module.exports = mongoose.model('Message', messageSchema);